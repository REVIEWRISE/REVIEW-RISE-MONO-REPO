# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.production and fill in with actual values
# NEVER commit .env.production to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use Docker service names for internal network communication

# App User (Low-Privilege) - Runtime operations
DATABASE_URL="postgresql://reviewrise_app:CHANGE_THIS_APP_PASSWORD@postgres:5432/reviewrise_db?sslmode=require"

# Admin User (High-Privilege) - Migrations only
DATABASE_ADMIN_URL="postgresql://reviewrise_admin:CHANGE_THIS_ADMIN_PASSWORD@postgres:5432/reviewrise_db?sslmode=require"

# PostgreSQL root credentials (for init-db.sh)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_ROOT_PASSWORD
POSTGRES_DB=reviewrise_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection (using Docker service name)
REDIS_URL="redis://redis:6379"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_64_CHAR_RANDOM_STRING_GENERATE_WITH_OPENSSL"

# =============================================================================
# SERVICE URLS (Internal Docker Network)
# =============================================================================
# These use Docker service names for internal communication
NOTIFICATIONS_SERVICE_URL=http://notifications-service:3008
EXPRESS_AUTH_URL=http://express-auth:3010
EXPRESS_REVIEWS_URL=http://express-reviews:3006
EXPRESS_AI_URL=http://express-ai:3002
EXPRESS_SOCIAL_URL=http://express-social:3003
EXPRESS_GBP_ROCKET_URL=http://express-gbp-rocket:3004
EXPRESS_AD_RISE_URL=http://express-ad-rise:3005
EXPRESS_BRAND_URL=http://express-brand:3007
EXPRESS_SEO_HEALTH_URL=http://express-seo-health:3011
EXPRESS_ADMIN_PORTAL_URL=http://express-admin-portal:3012

# =============================================================================
# NEXT.JS PUBLIC VARIABLES
# =============================================================================
# These are exposed to the browser, so use public/external URLs
# Update these to match your actual domain
NEXT_PUBLIC_API_URL=https://staging.reviewrise.com/api
NEXT_PUBLIC_LLM_COST_WARNING=true
BASEPATH=""

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# API key for LLM provider (OpenAI, Anthropic, etc.)
LLM_PROVIDER_API_KEY="sk-YOUR_ACTUAL_API_KEY_HERE"

# =============================================================================
# EMAIL & NOTIFICATIONS (if applicable)
# =============================================================================
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
# EMAIL_FROM=noreply@reviewrise.com

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# DEPLOYMENT METADATA (Optional)
# =============================================================================
# DEPLOY_VERSION=1.0.0
# DEPLOY_DATE=2025-12-25
# DEPLOY_COMMIT_SHA=abc123def456
